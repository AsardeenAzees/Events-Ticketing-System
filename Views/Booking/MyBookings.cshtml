@model List<Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<h2 class="mb-4"><i class="fas fa-ticket-alt"></i> My Bookings</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Tickets</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>#@booking.BookingId</td>
                        <td>@booking.Event?.EventName</td>
                        <td>@booking.Event?.EventDate.ToString("MMM dd, yyyy")</td>
                        <td>@booking.NumberOfTickets</td>
                        <td>Rs. @booking.FinalAmount.ToString("N2")</td>
                        <td>
                            @if (booking.PaymentStatus == "Completed")
                            {
                                <span class="badge bg-success">@booking.PaymentStatus</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@booking.PaymentStatus</span>
                            }
                        </td>
                        <td>
                            <a asp-action="BookingConfirmation" asp-route-id="@booking.BookingId" class="btn btn-sm btn-primary">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You haven't made any bookings yet.
        <a asp-controller="Event" asp-action="Index">Browse events</a> to get started!
    </div>
}

