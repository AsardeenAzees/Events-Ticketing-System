@model List<Booking>
@{
    ViewData["Title"] = "Upcoming Events";
}

<h2 class="mb-4"><i class="fas fa-calendar-check"></i> My Upcoming Events</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var booking in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">@booking.Event?.EventName</h5>
                        <p class="text-muted">
                            <i class="fas fa-calendar"></i> @booking.Event?.EventDate.ToString("MMMM dd, yyyy")<br>
                            <i class="fas fa-clock"></i> @booking.Event?.EventTime.ToString(@"hh\:mm")<br>
                            <i class="fas fa-map-marker-alt"></i> @booking.Event?.Venue?.VenueName, @booking.Event?.Venue?.City<br>
                            <i class="fas fa-ticket-alt"></i> @booking.NumberOfTickets ticket(s)
                        </p>
                        <a asp-action="BookingConfirmation" asp-route-id="@booking.BookingId" class="btn btn-primary">
                            <i class="fas fa-eye"></i> View Tickets
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You don't have any upcoming events.
        <a asp-controller="Event" asp-action="Index">Browse events</a> to book tickets!
    </div>
}

