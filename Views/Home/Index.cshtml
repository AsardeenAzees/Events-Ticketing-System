@model List<Event>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4">
    <h1 class="display-4">Welcome to StarEvents</h1>
    <p class="lead">Your premier destination for concerts, theatre shows, and cultural events in Sri Lanka</p>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="fas fa-calendar-alt"></i> Browse All Events
        </a>
    </div>
</div>

<h2 class="mb-4">Upcoming Events</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var eventItem in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                    {
                        <img src="@eventItem.ImageUrl" class="card-img-top" alt="@eventItem.EventName" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-white"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@eventItem.EventName</h5>
                        <p class="card-text">@(eventItem.Description.Length > 100 ? eventItem.Description.Substring(0, 100) + "..." : eventItem.Description)</p>
                        <p class="text-muted">
                            <i class="fas fa-calendar"></i> @eventItem.EventDate.ToString("MMM dd, yyyy")<br>
                            <i class="fas fa-clock"></i> @eventItem.EventTime.ToString(@"hh\:mm")<br>
                            <i class="fas fa-map-marker-alt"></i> @eventItem.Venue?.VenueName, @eventItem.Venue?.City
                        </p>
                        <p class="text-primary fw-bold">Rs. @eventItem.TicketPrice.ToString("N2")</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-primary">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No upcoming events at the moment. Please check back later!
    </div>
}

