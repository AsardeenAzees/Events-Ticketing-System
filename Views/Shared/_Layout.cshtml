<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarEvents Ticketing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-star"></i> StarEvents
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Event" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i> Events
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @* Customer Features - Only for Customers *@
                            @if (!User.IsInRole("Admin") && !User.IsInRole("Organizer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Booking" asp-action="MyBookings">
                                        <i class="fas fa-ticket-alt"></i> My Bookings
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Booking" asp-action="UpcomingEvents">
                                        <i class="fas fa-calendar-check"></i> Upcoming Events
                                    </a>
                                </li>
                            }
                            
                            @* Organizer Features - Only for Organizers (NOT Admin) *@
                            @if (User.IsInRole("Organizer") && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Event" asp-action="MyEvents">
                                        <i class="fas fa-calendar"></i> My Events
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Event" asp-action="Create">
                                        <i class="fas fa-plus-circle"></i> Create Event
                                    </a>
                                </li>
                            }
                            
                            @* Admin Features - Only for Admins *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cog"></i> Admin Panel
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><h6 class="dropdown-header"><i class="fas fa-tachometer-alt"></i> Dashboard</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-chart-line"></i> Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header"><i class="fas fa-cogs"></i> Management</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Events"><i class="fas fa-calendar"></i> Manage Events</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Venues"><i class="fas fa-building"></i> Manage Venues</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users"><i class="fas fa-users"></i> Manage Users</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header"><i class="fas fa-chart-bar"></i> Reports</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Reports"><i class="fas fa-file-alt"></i> System Reports</a></li>
                                    </ul>
                                </li>
                            }
                            
                            @* Common User Features *@
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user"></i> Profile
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                            
                            @* Display User Role Badge *@
                            <li class="nav-item ms-auto">
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-danger mt-2"><i class="fas fa-crown"></i> Admin</span>
                                }
                                else if (User.IsInRole("Organizer"))
                                {
                                    <span class="badge bg-warning mt-2"><i class="fas fa-user-tie"></i> Organizer</span>
                                }
                                else
                                {
                                    <span class="badge bg-info mt-2"><i class="fas fa-user"></i> Customer</span>
                                }
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - StarEvents Ticketing System - All Rights Reserved
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Initialize Flatpickr for all date inputs with context-aware settings
        document.addEventListener('DOMContentLoaded', function() {
            // For DOB fields (Profile, Register) - max date is today
            document.querySelectorAll('input.datepicker[data-max-date]').forEach(function(input) {
                flatpickr(input, {
                    dateFormat: "Y-m-d",
                    allowInput: true,
                    clickOpens: true,
                    minDate: "1900-01-01",
                    maxDate: input.getAttribute('data-max-date')
                });
            });
            
            // For Event Date fields - min date is today
            document.querySelectorAll('input.datepicker[data-min-date]').forEach(function(input) {
                flatpickr(input, {
                    dateFormat: "Y-m-d",
                    allowInput: true,
                    clickOpens: true,
                    minDate: input.getAttribute('data-min-date')
                });
            });
            
            // For other date inputs without specific attributes
            document.querySelectorAll('input[type="date"]:not(.datepicker)').forEach(function(input) {
                flatpickr(input, {
                    dateFormat: "Y-m-d",
                    allowInput: true,
                    clickOpens: true
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

