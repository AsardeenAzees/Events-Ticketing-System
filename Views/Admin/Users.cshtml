@model List<ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<h2 class="mb-4"><i class="fas fa-users"></i> Manage Users</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th>Loyalty Points</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td><span class="badge bg-info">@user.Role</span></td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.City</td>
                        <td>@user.LoyaltyPoints</td>
                        <td>
                            @{
                                var isUserLocked = user.LockoutEnabled && user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow;
                            }
                            @if (isUserLocked)
                            {
                                <span class="badge bg-danger">Locked</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            <form asp-action="ToggleUserStatus" asp-route-userId="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to @(isUserLocked ? "unlock" : "lock") @(user.FirstName + " " + user.LastName)?');">
                                <button type="submit" class="btn btn-sm btn-@(isUserLocked ? "success" : "warning")">
                                    <i class="fas fa-@(isUserLocked ? "unlock" : "lock")"></i> @(isUserLocked ? "Unlock" : "Lock")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No users found.
    </div>
}

