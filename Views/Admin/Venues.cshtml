@model List<Venue>
@{
    ViewData["Title"] = "Manage Venues";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building"></i> Manage Venues</h2>
    <a asp-action="CreateVenue" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Venue
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Venue Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Capacity</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td>@venue.VenueName</td>
                        <td>@venue.Address</td>
                        <td>@venue.City</td>
                        <td>@venue.Capacity</td>
                        <td>@venue.PhoneNumber</td>
                        <td>
                            @if (venue.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditVenue" asp-route-id="@venue.VenueId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="DeleteVenue" asp-route-id="@venue.VenueId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this venue?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No venues found. <a asp-action="CreateVenue">Create your first venue</a>.
    </div>
}

