@model List<Event>
@{
    ViewData["Title"] = "Manage Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar"></i> Manage Events</h2>
    <a asp-action="CreateEvent" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Event
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Venue</th>
                    <th>Organizer</th>
                    <th>Created By</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Available</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var eventCreatorInfo = ViewBag.EventCreatorInfo as Dictionary<int, bool> ?? new Dictionary<int, bool>();
                }
                @foreach (var eventItem in Model)
                {
                    var isCreatedByAdmin = eventCreatorInfo.ContainsKey(eventItem.EventId) && eventCreatorInfo[eventItem.EventId];
                    <tr>
                        <td>@eventItem.EventName</td>
                        <td>@eventItem.EventDate.ToString("MMM dd, yyyy")</td>
                        <td>@eventItem.Venue?.VenueName</td>
                        <td>@eventItem.Organizer?.FirstName @eventItem.Organizer?.LastName</td>
                        <td>
                            @if (isCreatedByAdmin)
                            {
                                <span class="badge bg-danger"><i class="fas fa-crown"></i> Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-warning"><i class="fas fa-user-tie"></i> Organizer</span>
                            }
                        </td>
                        <td>@eventItem.Category</td>
                        <td>Rs. @eventItem.TicketPrice.ToString("N2")</td>
                        <td>@eventItem.AvailableTickets / @eventItem.TotalTickets</td>
                        <td>
                            @if (eventItem.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditEvent" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="DeleteEvent" asp-route-id="@eventItem.EventId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No events found. <a asp-action="CreateEvent">Create your first event</a>.
    </div>
}

