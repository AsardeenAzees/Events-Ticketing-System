@model List<Event>
@{
    ViewData["Title"] = "My Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar"></i> My Events</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Event
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Event Name</th>
                    <th>Date</th>
                    <th>Venue</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Available</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eventItem in Model)
                {
                    <tr>
                        <td>@eventItem.EventName</td>
                        <td>@eventItem.EventDate.ToString("MMM dd, yyyy")</td>
                        <td>@eventItem.Venue?.VenueName</td>
                        <td>@eventItem.Category</td>
                        <td>Rs. @eventItem.TicketPrice.ToString("N2")</td>
                        <td>@eventItem.AvailableTickets / @eventItem.TotalTickets</td>
                        <td>
                            @if (eventItem.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="SalesReport" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-info">
                                    <i class="fas fa-chart-line"></i> Sales
                                </a>
                                <form asp-action="Delete" asp-route-id="@eventItem.EventId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event? This action cannot be undone if there are no bookings.');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You haven't created any events yet.
        <a asp-action="Create">Create your first event</a> to get started!
    </div>
}

