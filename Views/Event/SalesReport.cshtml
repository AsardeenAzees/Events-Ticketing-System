@{
    ViewData["Title"] = "Sales Report";
    var eventModel = ViewBag.Event as Event;
    var bookings = ViewBag.Bookings as List<Booking> ?? new List<Booking>();
    var totalRevenue = ViewBag.TotalRevenue as decimal? ?? 0;
    var totalTicketsSold = ViewBag.TotalTicketsSold as int? ?? 0;
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-chart-line"></i> Sales Report - @eventModel?.EventName</h2>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Total Revenue</h5>
                <h3>Rs. @totalRevenue.ToString("N2")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Tickets Sold</h5>
                <h3>@totalTicketsSold</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Available Tickets</h5>
                <h3>@eventModel?.AvailableTickets</h3>
            </div>
        </div>
    </div>
</div>

@if (bookings.Any())
{
    <div class="card shadow">
        <div class="card-header">
            <h5 class="mb-0">Booking Details</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Tickets</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in bookings)
                        {
                            <tr>
                                <td>#@booking.BookingId</td>
                                <td>@booking.User?.FirstName @booking.User?.LastName</td>
                                <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                                <td>@booking.NumberOfTickets</td>
                                <td>Rs. @booking.FinalAmount.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No bookings found for this event.
    </div>
}

<div class="mt-3">
    <a asp-action="MyEvents" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to My Events
    </a>
</div>

